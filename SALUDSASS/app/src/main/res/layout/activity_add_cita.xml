<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCita">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_agregar_cita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sas" />

    <TextView
        android:id="@+id/txt_agregar_cita"
        android:layout_width="186dp"
        android:layout_height="32dp"
        android:layout_marginBottom="5dp"
        android:text="Agregar nueva atenciÃ³n"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_agregar_cita">

        <Button
            android:id="@+id/btn_agregar_fecha"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"
            android:text="Seleccione su fecha deseada"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ShowText"
            android:layout_width="300dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="#3E4FE2" />

        <Button
            android:id="@+id/btn_agregar_hora"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"
            android:text="Seleccione su hora deseada"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ShowTextHora"
            android:layout_width="300dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="#3E4FE2" />

        <Spinner
            android:id="@+id/sp_tipo_cita"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="412dp"
        android:layout_height="182dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btn_confirmar_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3E4FE2"
            android:text="Confirmar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cancelar_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3E4FE2"
            android:text="Cancelar"
            android:textColor="@color/white" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>